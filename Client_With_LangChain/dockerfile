# Use a lightweight Python base image
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies (required for Streamlit, httpx, etc.)
RUN apt-get update && apt-get install -y \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy project files
COPY . /app

# Install dependencies using requirements.txt if it exists
RUN pip install --no-cache-dir -r requirements.txt || \
    pip install --no-cache-dir streamlit langchain langchain-google-genai langchain-mcp-adapters python-dotenv

# Expose Streamlit port
EXPOSE 8501

# Streamlit config (to allow container access)
ENV STREAMLIT_SERVER_HEADLESS=true
ENV STREAMLIT_SERVER_ADDRESS=0.0.0.0
ENV STREAMLIT_SERVER_PORT=8501

# Load .env inside container
ENV PYTHONUNBUFFERED=1

# Run Streamlit UI
CMD ["streamlit", "run", "streamlit_ui.py"]